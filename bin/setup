# Backup files
mv ~/.bashrc ~/.bashrc.backup
mv ~/.profile ~/.profile.backup

# Have to install curl to install nix package manager
sudo apt install curl -y

# Install nix package manager
sh <(curl -L https://nixos.org/nix/install) --daemon --yes

# Source to get nix commands
source /etc/profile

# Update channels
nix-channel --add https://github.com/nixos/nixpkgs/archive/nixos-23.11.tar.gz nixpkgs
nix-channel --add https://github.com/nix-community/home-manager/archive/release-23.11.tar.gz home-manager
nix-channel --update

# Install home-manager
nix-shell '<home-manager>' -A install

# Remove programs so there are no conflicts with nix packages
sudo snap remove --purge firefox
sudo apt purge vim curl git firefox -y
sudo apt autoremove -y

